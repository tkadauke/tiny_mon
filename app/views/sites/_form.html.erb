<%= form_for [@account, @site], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_messages :header_message => t('.could_not_create_site') %>
  
  <p>
    <%= f.label :name, t('.name'), :class => 'control-label required' %>
    <%= f.text_field :name, :class => 'form-control' %>
  </p>

  <p>
    <%= f.label :url, t('.url'), :class => 'control-label required' %>
    <%= f.text_field :url, :class => 'form-control' %>
  </p>

  <p>
    <%= f.submit t('.save_site'), :class => 'btn btn-primary btn-small btn-flat' %>
  </p>
<% end %>
