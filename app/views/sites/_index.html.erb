<% if @sites.empty? %>
  <p><%= t('.no_sites_found') %></p>
<% else %>
  <table class="table table-bordered table-striped dataTable">
    <thead>
      <tr>
        <th class="status"><%= t(".status") %></td>
        <th><%= t('.name') %></th>
        <% if current_user.can_edit_sites?(@account) %>
          <th><%= t('.options') %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @sites.each do |site| %>
        <tr class="<%= status_class(site) %>">
          <td><%= overall_status(site, :small) %></td>
          <td><%= link_to highlight(site.name, @search_filter.query), account_site_health_checks_path(site.account, site) %></td>
          <% if current_user.can_edit_sites?(@account) %>
            <td>
              <div class="btn-group">
                <%= link_to t('.edit'), edit_account_site_path(site.account, site), :class => 'btn btn-default btn-sm btn-flat' %>
                <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
                  <span class="caret"></span>
                  <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu">
                  <li><%= link_to t('.delete'), account_site_path(site.account, site), :method => :delete, :data => { :confirm => t('.confirm_delete') } if current_user.can_delete_sites?(@account) %></li>
                </ul>
              </div>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
