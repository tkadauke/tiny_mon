<%= form_for [@account, @site, @health_check], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_messages :header_message => t('.could_not_create_health_check') %>
  
  <div class="control-group">
    <%= f.label :name, t('.name'), :class => 'control-label required' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, t('.description'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :rows => 5, :class => 'form-control' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :interval, t('.interval'), :class => 'control-label required' %>
    <div class="form-controls">
      <%= f.select :interval, HealthCheck.intervals_with_units, :class => 'form-control' %>
    </div>
  </div>
  <br />
  <div class="control-group">
    <div class="controls">
      <%= f.submit t('.save_health_check'), :class => 'btn btn-default btn-flat' %>
    </div>
  </div>
<% end %>
