<%= title t('.footer_links') %>

<div class="box">
  <div class="box-body">
    <% if @footer_links.empty? %>
      <p><%= t('.nothing_found') %></p>
    <% else %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>&nbsp;</th>
            <th><%= t('.name') %></th>
            <th class="hidden-phone"><%= t('.url') %></th>
            <th><%= t('.options') %></th>
          </tr>
        </thead>
        <tbody id="links">
          <% @footer_links.each do |footer_link| %>
            <tr id="order_<%= footer_link.id %>">
              <td class="handle" title="<%= t('.drag_to_sort') %>">&nbsp;&#x2195;&nbsp;</td>
              <td><%= footer_link.text %></td>
              <td class="hidden-phone"><%= link_to footer_link.url, footer_link.url %></td>
              <td>
                <div class="btn-group">
                  <%= link_to t('.edit'), edit_admin_footer_link_path(footer_link), :class => 'btn btn-default btn-sm btn-flat' %>
                  <button class="btn btn-default btn-small btn-flat dropdown-toggle" data-toggle="dropdown">
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu">
                    <li><%= link_to t('.remove'), admin_footer_link_path(footer_link), :method => :delete, :data => { :confirm => t('.really_remove_footer_link') } %></li>
                  </ul>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>

    <%= javascript_tag %{
      $('#links').sortable({
        update: function(event, ui) {
          $.ajax({ url: '#{sort_admin_footer_links_path}?authenticity_token=#{form_authenticity_token}', type: "POST", data: $('#links').sortable('serialize', { key: 'link[]' }) })
        }
      })
    } %>

    <p><%= link_to t('.new_footer_link'), new_admin_footer_link_path %></p>
  </div>
</div>
