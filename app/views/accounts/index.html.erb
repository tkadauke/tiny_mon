<div class="box">
    <div class="box-body">
    <% if @accounts.blank? %>
      <%= render :partial => "no_account" %>
    <% else %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%= t('.status') %></th>
            <th><%= t('.name') %></th>
            <th><%= t('.options') %></th>
          </tr>
        </thead>
        <tbody>
          <% @accounts.each do |the_account| %>
            <tr>
              <td><%== status_icon the_account %></td>
              <td>
                <% if current_user.can_switch_to_account?(the_account) %>
                  <%= link_to the_account.name, switch_account_path(the_account), :method => :post %>
                <% else %>
                  <%= the_account.name %>
                <% end %>
              </td>
              <td>
                <div class="btn-group">
                  <%= link_to t('.details'), account_path(the_account), :class => "btn btn-sm btn-flat btn-default" %>
                  <button class="btn btn-sm btn-flat btn-default dropdown-toggle" data-toggle="dropdown">
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu">
                    <li><%= link_to t('.edit'), edit_account_path(the_account)   %></li>
                  </ul>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>

    <p><%= link_to t('.new_account'), new_account_path, :class => 'btn btn-sm btn-flat btn-default' %></p>
    </div>
</div>
