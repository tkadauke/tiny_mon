<br />
  <div class="row">
    <% @health_checks.each do |health_check| %>
      <div class="col-lg-3 col-xs-6" style="min-height:120px">
          <!-- small box -->
          <div style="cursor:pointer;" class="small-box bg-gray <%= 'bg-green' if health_check.status == 'success' %> <%= 'bg-red' if health_check.status == 'failure' %>">
              <div class="inner" onclick="location.href='<%= account_site_health_check_path(health_check.site.account, health_check.site, health_check)  %>'">
                  <h4>
                      <%= health_check.name %>
                  </h4>
                  <p>
                      <%= health_check.site.name %>
                  </p>
              </div>
              <a href="<%= account_site_health_check_path(health_check.site.account, health_check.site, health_check)  %>" class="small-box-footer">
                  More info <i class="fa fa-arrow-circle-right"></i>
              </a>
          </div>
      </div>
    <% end %>
  </div>
