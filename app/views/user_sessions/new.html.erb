<div class="box">
    <div class="box-body">
      <%= form_for @user_session, :url => login_path, :html => { :class => 'form-horizontal' } do |f| %>
        <%= f.error_messages :header_message => t('.could_not_login') %>
        <div class="control-group">
          <%= f.label :email, t('.email'), :class => 'control-label' %>
          <div class="controls">
            <%= f.email_field :email, :class => 'form-control' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :password, t('.password'), :class => 'control-label' %>
          <div class="controls">
            <%= f.password_field :password, :class => 'form-control' %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :remember_me, t('.remember_me'), :class => 'control-label' %>
          <div class="controls">
            <%= f.check_box :remember_me, :class => '' %>
          </div>
        </div>

        <div class="control-group">
          <div class="controls">
            <%= f.submit t('.login'), :class => 'btn btn-primary btn-small btn-flat' %> | <%= link_to t('.forgot_password'), new_password_reset_path,  :class => 'btn btn-default btn-small btn-flat' %> | <%= link_to t('.register_instead'), new_user_path,  :class => 'btn btn-default btn-small btn-flat' %>
          </div>
        </div>
      <% end %>
  </div>
</div>